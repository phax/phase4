        <version>${project.version}</version>
      </dependency>
      <dependency>
        <groupId>com.helger.phase4</groupId>
        <artifactId>phase4-cef-client</artifactId>
        <version>${project.version}</version>
      </dependency>
      
      <!-- DBNAlliance -->
      <dependency>
        <groupId>com.helger.phase4</groupId>
        <artifactId>phase4-profile-dbnalliance</artifactId>
        <version>${project.version}</version>
      </dependency>
      <dependency>
